@model IEnumerable<MyUser>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
@if (Model.Count() > 0)
{
    <table class="table table-bordered">
        <thead>
            <tr>

                <td>FullName</td>
                <td>UserName</td>
                <td>Email</td>
                <td>Tools</td>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FullName    </td>
                <td>@item.UserName    </td>
                <td>@item.Email    </td>
                <td>
                    <form asp-action="DeleteUser" method="post">
                        <a asp-action="EditPerson" class="btn btn-info" asp-route-id="@item.Id">Edit</a>
                        <input type="hidden" asp-for="@item.Id" name="id" />
                        <button type="submit" class="btn btn-danger">Delete</button>

                    </form>
                </td>
            </tr>

        }
    </table>
}
else
{
    <div class="card card-body bg-info">
        There is No User Here!

    </div>
    <br />
    <a asp-action="index" asp-controller="Default" class="btn btn-primary">Home</a>

}
<a asp-action="index" asp-controller="Role" class="btn btn-primary">Roles</a>


