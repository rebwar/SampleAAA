@model UserViewModel
@{
    ViewData["Title"] = "AddUser";
}

<h1>AddUser</h1>

<div asp-validation-summary="All"></div>
<form asp-action="AddUser" method="post">
    <div class="form-group">
        <label asp-for="FullName">FullName</label>
        <input asp-for="FullName" class="input-group" />
    </div>
    <div class="form-group">
        <label asp-for="UserName">UserName</label>
        <input asp-for="UserName" class="input-group" />
    </div>
    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="input-group" />
    </div>
    <div class="form-group">
        <label asp-for="Password">Password</label>
        <input asp-for="Password" class="input-group" />
    </div>

    <button type="submit" class="btn btn-success">Edit</button>
    <a asp-action="index" class="btn btn-info">Cancel</a>
    </form>
