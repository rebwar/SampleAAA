@model IEnumerable<Person>
@{
    ViewData["Title"] = "GetPeople";
}

<h1>GetPeople</h1>
@if (Model.Count() > 0)
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <td>Name</td>
                <td>Family</td>
                <td>Email</td>
                <td>Tools</td>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name    </td>
                <td>@item.Family    </td>
                <td>@item.Email    </td>
                <td>
                    <form asp-action="DeletePerson" method="post">
                        <a asp-action="EditPerson" class="btn btn-info" asp-route-id="@item.PersonId">Edit</a>
                        <input type="hidden" asp-for="@item.PersonId" name="id" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a asp-action="AddUser" asp-controller="Admin" class="btn btn-primary" asp-route-id="@item.PersonId">Add USer</a>

                    </form>
                </td>
            </tr>

        }
    </table>
}
else
{
    <div class="card card-body bg-info">
        There is No User Here!

    </div>
    <br />
    <a asp-action="index" class="btn btn-primary">Home</a>

}
