@model Person

@{
    ViewData["Title"] = "EditPerson";
}

<h1>EditPerson</h1>

<div asp-validation-summary="All"></div>
<form asp-action="EditPerson" method="post">
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="input-group" />
    </div>
    <div class="form-group">
        <label asp-for="Family">Family</label>
        <input asp-for="Family" class="input-group" />
    </div>
    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="input-group" />
    </div>
    <input type="hidden" asp-for="PersonId" />
    <button type="submit" class="btn btn-success">Edit</button>
    <a asp-action="index" class="btn btn-info">Cancel</a>
</form>
