@model IEnumerable<MyUser>

@if (Model.Count() > 0)
{
    <form asp-action="AddUsersToRole" method="post">
        <input type="hidden" name="RoleId" value="@ViewBag.RoleId" />
        <table class="table table-bordered">
            <thead>
                <tr>

                    <td>FullName</td>
                    <td>UserName</td>
                    <td>Email</td>
                    <td>Select</td>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.FullName    </td>
                    <td>@item.UserName    </td>
                    <td>@item.Email    </td>
                    <td><input type="checkbox" name="users" value="@item.Id" /></td>
                    <td></td>
                </tr>

            }
        </table>
        <button class="btn btn-primary" type="submit">Save</button>
    </form>

}
else
{
    <div class="card card-body bg-info">
        There is No User Here!

    </div>
    <br />
    <a asp-action="index" asp-controller="Default" class="btn btn-primary">Home</a>

}
<a asp-action="index" asp-controller="Role" class="btn btn-primary">Roles</a>


